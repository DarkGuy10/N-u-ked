{
	"compilerOptions": {
		"target": "ESNext",
		"incremental": true,
		"module": "Node16",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./lib",
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"files": ["src/globals.d.ts"],
	"exclude": ["node_modules", "**/node_modules/*", "lib"]
}
